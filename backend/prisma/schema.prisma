generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model Todo {
  id        String   @id @default(uuid())
  name      String
  data      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  id        String   @id @default(uuid())
  email     String
  password  String
  todos     Todo[]
  createdAt DateTime @default(now())
}
